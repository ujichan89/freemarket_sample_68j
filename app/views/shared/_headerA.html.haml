.Header
  .__mainMenu
    =link_to (image_tag 'logo/logo.png', class: '--logo'), root_path
    .--keywordSeach
      %input{type: 'text', placeholder: 'キーワードから探す', class: '__inputbox'}
      =image_tag 'icon/icon-search 1.png', class: '__btn'

  .__subMenu
    .--otherSarches
      .__categorySeach
        カテゴリー
        %ul.--parents
          %li.__parent
            レディース
            %ul.--children
              %li.__child
                トップス
                %ul.--grand-children
                  %li.__grand-child
                  Tシャツ/カットソー(半袖/袖なし)

      =link_to 'ブランド', '#', class: '__brandSeach'

    .--loguinMenu
      - if user_signed_in?
        .__nickname
          = current_user.nickname
        .__logout
          = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: '--logout'
        .__mypage
          = link_to 'マイページ', user_path(current_user), class: '--mypage'
      - else
        .__login
          = link_to 'ログイン', new_user_session_path, class:'--login'
        .__signUp
          = link_to '新規会員登録', new_user_registration_path, class:'--signUp'